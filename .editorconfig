root = true

[*]
charset = utf-8

end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

indent_style = space
indent_size = 4

[[Mm]akefile]
indent_style = tab

[*.go]
indent_style = tab

[*.proto]
indent_size = 2
indent_style = space

[*.{yaml,yml}]
indent_size = 2
indent_style = space

[*.sh]
indent_size = 2
indent_style = space

[.gitmodules]
indent_style = tab

[go.mod]
indent_style = tab

[*.tmpl]
indent_style = tab
